source $env(LIBRARY_DIR)/projection.tcl

proc p {lats lons} {
    nap "mat = reshape(0, {0 4})"
    foreach lat $lats {
	foreach lon $lons {
	    nap "x = nint(1e9 * projection_x(lat,lon)) / 1e9"
	    nap "y = nint(1e9 * projection_y(lat,lon)) / 1e9"
	    nap "mat = mat /// (lat // lon // x // y)"
	}
    }
    return [$mat value]
}

