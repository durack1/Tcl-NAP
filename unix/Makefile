	$(ECHO) "source upload.tcl; upload_sf `$(NATIVE_PATH) $(INSTALL_TAR)`" > tmp.tcl
	TCL_LIBRARY=$(TCL_LIBRARY_DIR) $(TCLSH_PROG) tmp.tcl
	$(RM) tmp.tcl

