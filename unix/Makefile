#------------------------------------------------------------------------------
# Tests
#   TEST_COMMAND: Simple command used to check that dynamic loading works
#------------------------------------------------------------------------------

TEST_COMMAND = ::NAP::nap 2+2

TEST_SCRIPT = $(TEST_DIR)/all.tcl

ENV = \
	DATA_DIR="`$(NATIVE_PATH) $(DATA_DIR)`" \
	GSHHS_DATA_DIR="`$(NATIVE_PATH) $(GSHHS_DATA_DIR)`" \
	LAND_FLAG_DATA_DIR="`$(NATIVE_PATH) $(LAND_FLAG_DATA_DIR)`" \
	PROJ_LIB="`$(NATIVE_PATH) $(PROJ_DATA_DIR)`" \
	TEST_DATA_DIR="`$(NATIVE_PATH) $(TEST_DIR)/data`" \
	LIBRARY_DIR="`$(NATIVE_PATH) $(LIBRARY_DIR)`" \
	TCL_LIBRARY=$(TCL_LIBRARY_DIR)

test0.tcl:
	$(RM) $@
	$(ECHO) 'source {'`$(NATIVE_PATH) $(TEST_SCRIPT)`'}' >> $@

test1.tcl:
	$(RM) $@
	$(ECHO) "load `$(NATIVE_PATH) $(PWD)/$(PACKAGE_SHLIB)`" >> $@
	$(ECHO) 'puts ""' >> $@
	$(ECHO) 'if [catch {$(TEST_COMMAND)}] {' >> $@
	$(ECHO) '    puts "$(TCLSH_PROG) failed with $(PACKAGE)"' >> $@
	$(ECHO) '    puts ""' >> $@
	$(ECHO) '    exit 1' >> $@
	$(ECHO) '} else {' >> $@
	$(ECHO) '    puts "$(TCLSH_PROG) loaded $(PACKAGE) and"' >> $@
	$(ECHO) '    puts "successfully ran following simple command:"' >> $@
	$(ECHO) '    puts "$(TEST_COMMAND)"' >> $@
	$(ECHO) '    puts ""' >> $@
	$(ECHO) '    exit 0' >> $@
	$(ECHO) '}' >> $@

test2.tcl:
	$(RM) $@
	$(ECHO) 'set env(PACKAGE_SHLIB) {$(PACKAGE_SHLIB)}' >> $@
	$(ECHO) 'source test0.tcl' >> $@

test3.tcl:
	$(RM) $@
	$(ECHO) 'set env(PACKAGE_SHLIB) {'`$(NATIVE_PATH) $(PACKAGE_SHLIB)`'}' >> $@
	$(ECHO) 'source {'`$(NATIVE_PATH) $(TEST_DIR)/wish_tests.tcl`'}' >> $@

test: test1 test2 test3

test1: $(PACKAGE_SHLIB) test1.tcl
	$(ENV) $(TCLSH_PROG) test1.tcl

test2: $(PACKAGE_SHLIB) test0.tcl test2.tcl
	$(ENV) $(TCLSH_PROG) test2.tcl

test3: $(PACKAGE_SHLIB) test3.tcl
	$(ENV) $(WISH_PROG) test3.tcl

test0: $(PACKAGE_SHELL) test0.tcl
	$(ENV) $(PACKAGE_SHELL) test0.tcl

#------------------------------------------------------------------------------
# Installer (tcl starpack)
#------------------------------------------------------------------------------

INSTALLER_NAME = $(PACKAGE)$(NODOT_VERSION)_$(NODOT_PATCHLEVEL)$(PLATFORM)_install
INSTALLER = $(TOP_DIR)/$(INSTALLER_NAME)$(EXEEXT)
INSTALLER_TCL = $(INSTALLER_DIR)/$(PACKAGE)_install.tcl
LOCAL_INSTALLER_TCL = $(INSTALLER_NAME).tcl
CP2VFS_TCL = $(INSTALLER_DIR)/cp2vfs.tcl
STARTUP_FILES = \
    $(INSTALLER_DIR)/tclshrc.tcl\
    $(INSTALLER_DIR)/wishrc.tcl\
    $(INSTALLER_DIR)/tkcon.cfg
STARKIT = $(INSTALLER_NAME).kit
VFS = $(INSTALLER_NAME).vfs
STARPACK = $(INSTALLER_NAME)$(EXEEXT)
SDX = sdx
TCLKIT = $(ROOT)/tclkit/tclkit$(EXEEXT)

installer: $(INSTALLER)

upload_installer: $(INSTALLER)
	$(ECHO) "source upload.tcl; upload_sf `$(NATIVE_PATH) $(INSTALLER)`" > tmp.tcl
	TCL_LIBRARY=$(TCL_LIBRARY_DIR) $(TCLSH_PROG) tmp.tcl
	$(RM) tmp.tcl

$(INSTALLER): $(STARPACK)
	$(CP) $(STARPACK) $@

$(STARPACK): $(VFS) $(TCLKIT)
	$(SDX) wrap "`$(NATIVE_PATH) $(STARPACK)`" -runtime "`$(NATIVE_PATH) $(TCLKIT)`"

$(VFS): install $(STARKIT) $(CP2VFS_TCL) $(STARTUP_FILES)
	rm -rf $(VFS)
	$(SDX) unwrap "`$(NATIVE_PATH) $(STARKIT)`"
	TCL_LIBRARY=$(TCL_LIBRARY_DIR) \
	    VERSION=$(VERSION) \
	    INSTALLER_NAME=$(INSTALLER_NAME) \
	    $(TCLSH_PROG) "`$(NATIVE_PATH) $(CP2VFS_TCL)`"

$(STARKIT): $(LOCAL_INSTALLER_TCL)
	$(SDX) qwrap $(LOCAL_INSTALLER_TCL)

$(LOCAL_INSTALLER_TCL): $(INSTALLER_TCL)
	$(CP) $(INSTALLER_TCL) $@

#------------------------------------------------------------------------------
# Tag all cvs files
#------------------------------------------------------------------------------

CVS = cvs
CVS_TAG = $(PACKAGE)-$(MAJOR_VERSION)-$(MINOR_VERSION)-$(NODOT_PATCHLEVEL)

tag:
	cd $(TOP_DIR); $(CVS) -Q tag -F $(CVS_TAG)

#------------------------------------------------------------------------------
# Produce profile file 'prof.out' using SGI ssrun & prof
#------------------------------------------------------------------------------

prof.out: $(PACKAGE_SHELL)
	ssrun -usertime $(PACKAGE_SHELL) $(TEST_SCRIPT)
	prof $(PACKAGE_SHELL).usertime.m* > $@
	rm -f *.usertime.*

#------------------------------------------------------------------------------
# depend.mk is made by 'make depend'. See rule above.
#------------------------------------------------------------------------------

include depend.mk
