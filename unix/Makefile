TCL_STUB_LIB_PATH = /cygdrive/c/dav480/tcl/lib/tclstub84$(DBGX).lib
TK_LIB_PATH = /cygdrive/c/dav480/tcl/lib/tk84$(DBGX).lib
TK_STUB_LIB_PATH = /cygdrive/c/dav480/tcl/lib/tkstub84$(DBGX).lib
